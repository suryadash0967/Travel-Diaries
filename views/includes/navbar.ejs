            <option value="Historical Attractions">Historical Attractions</option>
            <option value="Food & Drink">Food & Drink</option>
            <option value="Adventure & Outdoor Activities">Adventure & Outdoor Activities</option>
            <option value="College & Educational Events">College & Educational Events</option>
            <option value="Entertainment & Leisure">Entertainment & Leisure</option>
            <option value="Wellness & Healing">Wellness & Healing</option>
            <option value="Other">Other</option>
          </select>
          <i class="fa-solid fa-filter"></i>
        </div>
        <button class="search-button"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>
    <div class="navigations">
      <div>
        <a href="/about">About Us</a>
      </div>
      <div>
        <a href="/listings/new">Share your experiences</a>
      </div>
      <% if(!currUser) { %>
        <a href="/signup"><b>SignUp</b></a>
        <a href="/login"><b>LogIn</b></a>
      <% } if(currUser) { %>
        <a href="/logout"><b>LogOut</b></a>
      <% } %>
    </div>
    <div class="hammy" onclick="toggleMenu()">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div class="dropdown-menu">
    <a href="/about" onclick="closeMenu()">About Us</a>
    <a href="/listings/new" onclick="closeMenu()">Share your experiences</a>
    <% if(!currUser) { %>
      <a href="/signup" onclick="closeMenu()">SignUp</a>
      <a href="/login" onclick="closeMenu()">LogIn</a>
      <% } if(currUser) { %>
        <a href="/logout" onclick="closeMenu()">LogOut</a>
      <% } %>
      <a style="color: #ff0000; font-weight: 600; font-size: 20px;" href="/listings" onclick="closeMenu()">
        <i class="fa-regular fa-compass"></i>&nbsp;
        <span>Travel</span>
        <!-- &nbsp; -->
        <span>Diaries</span>
      </a>
  </div>
</nav>

