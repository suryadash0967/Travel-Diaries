<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/rating.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png" />
    <title>Travel Diaries</title>
</head>
<body>
    
    <%- include("../includes/navbar.ejs") %>
    <div style="z-index: 200;">
        <div class="container" style="z-index: 200;">
            <%- include("../includes/flash.ejs") %>
            <%- body %>
        </div>
    
        <div style="z-index: 200;">
            <hr class="main-page-hr">
            <%- include("../includes/footer.ejs") %>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const splineViewer = document.querySelector('spline-viewer');
            if (splineViewer) {
                Object.assign(splineViewer.style, {
                    position: 'fixed',
                    top: '0',
                    left: '0',
                    width: '100%',
                    height: '100vh',
                    pointerEvents: 'auto',
                    display: 'block',
                    background: 'linear-gradient(90deg, rgba(2,0,34,1) 0%, rgba(1,0,47,1) 49%, rgba(0,74,62,1) 100%)',
                });
            }
        });

    </script>
</body>
</html>
